{
  "name": "build-init",
  "version": "1.0.0",
  "author": {
    "name": "Chris Cairns",
    "email": "chris@chriscairns.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdccairns/build-init.git"
  },
  "scripts": {
    "browser:start": "browser-sync start --server --files dist/css/*.css dist/js/*.js --no-notify",
    "build": "run-s css:build js:build",
    "css:build": "run-s sass:compile css:postcss",
    "css:clean": "rm -rf dist/css",
    "css:postcss": "postcss dist/css/*.css --use autoprefixer cssnano --replace --map",
    "fonts:clean": "rm -rf dist/fonts",
    "fonts:copy": "cp -r src/fonts dist/fonts",
    "js:build": "rollup --config",
    "js:clean": "rm -rf dist/js",
    "js:watch": "rollup --config --watch",
    "sass:compile": "sass src/scss:dist/css --load-path=src/scss --style=compressed",
    "sass:watch": "sass src/scss:dist/css --load-path=src/scss --style=compressed --watch",
    "serve": "run-p browser:start js:watch sass:watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "browser-sync": "^2.27.5",
    "cssnano": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.50.3",
    "sass": "^1.34.0"
  }
}
