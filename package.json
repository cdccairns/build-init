{
  "name": "build-init",
  "version": "1.0.0",
  "author": {
    "name": "Chris Cairns",
    "email": "chris@chriscairns.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdccairns/build-init.git"
  },
  "scripts": {
    "js:compile": "rollup --config",
    "sass": "run-s sass:compile sass:postcss",
    "sass:compile": "sass src/scss:dist/css --load-path=src/scss --style=compressed",
    "sass:postcss": "postcss dist/css/*.css --use autoprefixer --replace --map"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.50.3",
    "sass": "^1.34.0"
  }
}
